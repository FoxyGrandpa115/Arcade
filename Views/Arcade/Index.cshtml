@using Arcade.Models
@model User

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Arcade Login</title>
</head>

<h1>Jason's Arcade</h1>
<nav>

</nav>
<body class="p-3 mb-2 bg-dark text-white">
    <div class="d-flex justify-content-center">
        <div class="box">
            <h4>Register</h4>
        <form asp-action="Register" asp-controller="Arcade" method="post">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName"><br>
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName"><br>
        <span asp-validation-for="Username"></span>
        <label asp-for="Username">Username</label>
        <input asp-for="Username"><br>
        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Email</label>
        <input asp-for="Email"><br>
        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Password</label>
        <input asp-for="Password"><br>
        <span asp-validation-for="ConfirmPassword"></span>
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword"><br>
        <input value="Sign Up" type="submit">    
        </form>
        </div>
        <div class="box">
            <h4>Login</h4>
        <form asp-action="Login" asp-controller="Arcade" method="post">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Email</label>
        <input asp-for="Email"><br>
        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Password</label>
        <input asp-for="Password"><br>
        <input value="Login" type="submit">   
        </form>
            
        </div>
    </div>

</body>
